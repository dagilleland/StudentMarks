@{
    Page.Title = "Course Listings";
    Layout = "~/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12 page-header">
        <h1 class="pull-left">Course Listings</h1>
        <div class="pull-right well col-md-4">
            <h4>Commands: </h4>
            <span class="badge">CreateCourse</span>
            <span class="badge">UpdatePassMark</span>
            <span class="badge">SaveEvaluationComponents</span>
        </div>
        <div class="pull-right well col-md-4">
            <h4>Queries: </h4>
            <span class="badge">ListCourses()</span>
            <span class="badge">ListEvaluationComponents(CourseNumber)</span>
        </div>
