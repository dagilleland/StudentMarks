        </ul>
        <br />
        <form method="post" class="well">
            <fieldset>
                <legend>New Course</legend>
                <div class="form-group">
                    <label class="sr-only" for="courseNumber">Course Number</label>
                    <input type="text" class="form-control input-sm" name="courseNumber" placeholder="Number" />
                </div>
                <div class="form-group">
                    <label class="sr-only" for="courseName">Course Name</label>
                    <input type="text" class="form-control input-sm" name="courseName" placeholder="Name" />
                </div>
                <div class="input-group">
                    <label class="sr-only" for="passMark">Pass Mark</label>
                    <input type="number" class="form-control input-sm" name="passMark" placeholder="Pass Mark" value="50" />
                    <label class="input-group-addon input-sm">%</label>
                </div>
                <br />
                <input type="submit" value="Add Course" class="btn btn-default btn-sm" />
            </fieldset>
        </form>
    </div>

